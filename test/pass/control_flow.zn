# Test: Control flow statements

func main() {
    var x = 0
    var y = 0

    # If statement
    if true {
        x = 1
    }

    # If-else
    if x > 0 {
        y = 1
    } else {
        y = -1
    }

    # If-else if-else chain
    var grade = 85
    var letter = 0
    if grade >= 90 {
        letter = 1
    } else if grade >= 80 {
        letter = 2
    } else if grade >= 70 {
        letter = 3
    } else {
        letter = 4
    }

    # Nested if
    var a = 1
    var b = 1
    var c = 0
    if a > 0 {
        if b > 0 {
            c = 1
        }
    }

    # Unless (inverse if)
    unless x == 0 {
        y = 1 / x
    }

    # Unless-else
    var logged_in = false
    var redirect = false
    unless logged_in {
        redirect = true
    } else {
        redirect = false
    }

    # While loop
    x = 0
    while x < 10 {
        x = x + 1
    }

    # Until loop (inverse while)
    x = 0
    until x >= 10 {
        x = x + 1
    }

    # For loop
    var sum = 0
    for var i = 0; i < 10; i++ {
        sum += i
    }

    # Break and continue
    var iter = 0
    while true {
        iter++
        if iter == 3 {
            continue 0
        }
        if iter > 5 {
            break 0
        }
    }

    0
}
